import java.io.File;
import java.io.FileNotFoundException;
import java.util.Scanner;

public class TextAnalyzer {

    public static void main(String[] args) {
        String filePath = ("C:\\Users\\CLAB01-PCC29\\Downloads");
        
        try {
            analyzeText(filePath);
        } catch (FileNotFoundException e) {
            System.out.println("File not found: " + filePath);
        }
    }

    public static void analyzeText(String filePath) throws FileNotFoundException {
      
        File file = new File(filePath);
        Scanner scanner = new Scanner(file);

        StringBuilder text = new StringBuilder();
        while (scanner.hasNextLine()) {
            text.append(scanner.nextLine()).append(" ");
        }
        scanner.close();

        String content = text.toString();

        String[] words = content.split("\\s+");
        int wordCount = words.length;

        String[] sentences = content.split("[.!?]");
        int sentenceCount = 0;
        for (String sentence : sentences) {
            if (!sentence.trim().isEmpty()) {
                sentenceCount++;
            }
        }

        String uppercaseText = content.toUpperCase();

        String longestWord = "";
        for (String word : words) {
            if (word.length() > longestWord.length()) {
                longestWord = word;
            }
        }

        System.out.println("Word Count: " + wordCount);
        System.out.println("Sentence Count: " + sentenceCount);
        System.out.println("Text in Uppercase:\n" + uppercaseText);
        System.out.println("Longest Word: " + longestWord);
    }
}
